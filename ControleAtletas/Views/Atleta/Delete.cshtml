@model ControleAtletas.Models.Atleta

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover atleta</h1>

<h3>Você tem certeza que quer deletá-lo?</h3><br />
<div>

    <h4>Atleta</h4>
    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apelido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apelido)
        </dd>
        <dt class = "col-sm-2">
            Data de Nascimento
        </dt>
        <dd class="col-sm-10">
            @(Model.DataNascimento.Date.ToString("dd/MM/yyyy"))
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Altura)
        </dt>

        <dd class="col-sm-10">
            @($"{(double)Model.Altura / 100.0:N2}")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Peso)
        </dt>

        <dd class="col-sm-10">
            @(string.Format("{0:F1}", Model.Peso))
        </dd>

        <dt class = "col-sm-2">
            Posição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posicao)
        </dd>
        <dt class = "col-sm-2">
            Número da camisa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroCamisa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AtletaID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista de atletas</a>
    </form>
</div>
